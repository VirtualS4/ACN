<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".RekapDetail">

    <ImageView
        android:src="@drawable/kumatrace"
        android:id="@+id/gambar"
        android:layout_width="match_parent"

        android:layout_height="200dp">

    </ImageView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TextView
            android:id="@+id/lbl_tanggal"
            android:gravity="right"
            android:fontFamily="@font/gothic"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2020-04-02"
            android:textSize="24sp">

        </TextView>
        <TextView
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/gothic"
            android:textSize="16sp"
            android:text="Barang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lbl_barang"
                android:paddingTop="3dp"
                android:paddingLeft="10dp"
                android:text="Test Kopi"
                android:layout_weight="0.7"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </TextView>
            <Button
                android:id="@+id/btn_barang"
                android:text="Detail"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@color/colorAccent"
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </Button>
        </LinearLayout>

        <TextView
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/gothic"
            android:textSize="16sp"
            android:text="Pemenang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lbl_pemenang"
            android:paddingTop="3dp"
            android:paddingLeft="10dp"
            android:text="Test Zhofron"
            android:layout_weight="0.7"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

        </TextView>
        <Button
            android:id="@+id/btn_pemenang"
            android:text="Detail"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@color/colorAccent"
            android:layout_weight="1.3"
            android:layout_width="match_parent"
            android:layout_height="40dp">

        </Button>
    </LinearLayout>

        <TextView
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/gothic"
            android:textSize="16sp"
            android:text="Petugas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lbl_petugas"
                android:paddingTop="3dp"
                android:paddingLeft="10dp"
                android:text="Test Yuna"
                android:layout_weight="0.7"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="40dp">

            </TextView>

            <Button
                android:id="@+id/btn_petugas"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1.3"
                android:background="@color/colorAccent"
                android:text="Detail"
                android:textColor="@color/white"
                android:textSize="20sp">

            </Button>
        </LinearLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:text="Rp. 400.000"
            android:gravity="right"
            android:fontFamily="@font/gothic"
            android:textColor="@color/colorAccent"
            android:id="@+id/lbl_total"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@color/colorAccent"
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Back">

            </Button>
            <Button
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:id="@+id/btn_home"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Home">

            </Button>
        </LinearLayout>



    </LinearLayout>



</LinearLayout>